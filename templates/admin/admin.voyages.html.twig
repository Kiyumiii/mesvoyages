{% extends "baseadmin.html.twig" %}

{% block body %}
    <p class="text-right">
        <a href="{{ path('admin.voyage.ajout') }}" class="btn btn-primary">
            Ajouter une nouvelle visite
        </a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">Ville</th>
                <th class="text-left align-top" scope="col">Pays</th>
                <th class="text-center align-top" scope="col">Date</th>
                <th class="text-center align-top" scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 class="text-primary">{{ visite.ville }}</h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td class="text-center">
                        {{ visite.datecreationstring }}
                    </td>
                    <td class="text-center">
                        <a href="{{ path('admin.voyage.edit', {id:visite.id}) }}" class="btn btn-secondary">Editer</a>
                        <a href="{{ path('admin.voyage.suppr', {id:visite.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{ visite.ville }} ?');">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}